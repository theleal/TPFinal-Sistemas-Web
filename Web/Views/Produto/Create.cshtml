@model Web.Models.Produto

@{
    ViewData["Title"] = "Create";

}

<h1>Criar Produto</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">R$</span>
                    </div>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0">
                </div>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Status">Status:</label>
                @Html.EditorFor(x => x.Status)
            </div>
            <div class="form-group">
                <label for="ID_UsuarioCriacao">Usuário de Criação:</label>
                <select asp-for="ID_UsuarioCriacao" class="form-control" asp-items="@(ViewData["Usuarios"] as IEnumerable<SelectListItem>)"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Criar" class="btn btn-primary" />
                | <a class="btn btn-danger" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
